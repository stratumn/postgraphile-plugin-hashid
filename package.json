    "lodash.snakecase": "^4.1.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.5",
    "jest": "^23.6.0",
    "mock-req": "^0.2.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "typescript": "^3.1.3"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
